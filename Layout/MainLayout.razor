@inherits LayoutComponentBase
@using funnypassgenwasm.Components

<PageTitle>PassGen.lol</PageTitle>

<MyMudThemeProvider />

<div class="page mud-layout">
    <main>
        <MudPaper Elevation="10" Square="true"
                    Style="background-image: linear-gradient(white, lightgrey);">
            <MudStack Row="true" Spacing="0">
                <MudImage Src="eggman.png" Width="100" Height="128" Style="padding:5px;" Alt="Site Logo"></MudImage>
                <MudStack Spacing="0" Style="margin-left: 5px;">
                    <MudSpacer />
                    <MudText Typo="Typo.h3" Color="Color.Primary">PassGen.lol</MudText>
                    <MudText Typo="Typo.h6" Color="Color.Primary">Funny Password Generator</MudText>
                    <MudSpacer />
                </MudStack>
            </MudStack>
        </MudPaper>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-1 pt-1">
            @Body
        </MudContainer>
    </main>
</div>